<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_Fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.HomeFragment">

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/colorPrimary"
            android:fontFamily="sans-serif-light"
            android:paddingTop="30dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/info_button"
            android:layout_width="350dp"
            android:layout_height="125dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_round"
            android:visibility="visible"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/welcome_text"
            app:layout_constraintEnd_toEndOf="@+id/welcome_text"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/beginner"
            android:layout_width="350dp"
            android:layout_height="175dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/imgbtn_round"
            android:cropToPadding="true"
            android:focusable="auto"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcome_text"
            app:srcCompat="@drawable/beginner" />

        <ImageButton
            android:id="@+id/expert"
            android:layout_width="350dp"
            android:layout_height="175dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/imgbtn_round"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/beginner"
            app:srcCompat="@drawable/expert" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_round"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="@string/add"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/info_button"
            app:layout_constraintEnd_toEndOf="@+id/info_button"
            app:layout_constraintStart_toStartOf="@+id/info_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>